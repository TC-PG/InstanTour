<%- include("../partials/header") %>

	<div class="row">
		<h1 style="text-align:center;">編輯文章: <%= campground.name %></h1>
		
		<div class="articleFormFmt">
			<form id="editArticle" action="/campgrounds/<%= campground._id %>?_method=PUT" method="post" enctype="multipart/form-data">
				<div class="form-group">
					<label for="title">標題:</label>
					<input id="title" class="form-control" type="text" name="name" placeholder="標題" value="<%= campground.name %>" required>		
				</div>				
				<div class="form-group">
					<label for="uploadFile">上傳相片 (類型: jpeg / png):</label>
					<input id="uploadFile" class="form-control" type="file" name="photo" >
				</div>
				<div class="form-group">
					<label for="location">地址:</label>
					<input id="location" class="form-control" type="text" name="location" id="location" value="<%= campground.location %>"  placeholder="請輸入地址" required>
				</div>
				<div class="form-group">
					<label for="article">內文:</label>
					<textarea id="article" class="form-control" type="text" name="description" placeholder="請輸入內文"><%= campground.description %></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">送出</button>
				</div>
			</form>
			<a href="/campgrounds">返回</a>	
		</div>

			
	</div>

<%- include("../partials/footer") %>