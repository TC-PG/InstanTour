<%- include("./partials/header") %>

	<div class="row">
		<h1 style="text-align: center">註冊</h1>
		<div class="userFormFmt">
			<form id="registerForm" action="/register" method="post">
				<div class="form-group">
					<input class="form-control" type="text" name="username" placeholder="使用者名稱" required>
				</div>
				<div class="form-group">					
					<input id="password" class="form-control" type="password" name="password" placeholder="請輸入密碼" required>
					<span class="pwreminder">密碼至少六位數，須包含大小寫英文(a-z, A-Z)、數字及特殊符號(!@#$%^&*)</span>
				</div>
				<div class="form-group">
					<input id="confirmPassword" class="form-control" type="password" name="confirmPassword" placeholder="請確認密碼" required>
					<span class="pwreminder">密碼不一致</span>
				</div>	
				<div class="form-group">
					<input class="form-control" type="email" name="email" placeholder="請輸入信箱" required>
				</div>
				<input class="form-control auth" type="text" name="auth" value="userPage">
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">確定</button>
				</div>
			</form>
			<a href="/campgrounds?search=all">返回</a>
			<a href="/admin/new" style="float:right">成為管理員</a>
		</div>
	</div>
<%- include("./partials/footer") %>